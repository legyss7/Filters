<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Неактивное состояние кнопки -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey" /> <!-- Цвет и толщина рамки -->
            <corners android:radius="6dp" /> <!-- Округленные углы -->
            <solid android:color="@color/grey"/>
        </shape>
        <color android:color="@color/white" /> <!-- Цвет текста для неактивного состояния -->
    </item>
    <!-- Активное состояние кнопки -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey" /> <!-- Цвет и толщина рамки -->
            <corners android:radius="6dp" /> <!-- Округленные углы -->
            <solid android:color="@color/green"/>
        </shape>
        <color android:color="@color/black" /> <!-- Цвет текста для активного состояния -->
    </item>
</selector>
